[user]
	name = Peter VandeHaar
	email = pjvandehaar@gmail.com
[push]
	default = current # this means `simple` in modern versions
[core]
	excludesfile = ~/.gitignore_global
[alias]
	cdiff = diff --color-words=.
	wdiff = diff --word-diff
	glog = log --graph --decorate --branches --abbrev-commit
	lol = log --graph --decorate --branches --abbrev-commit --pretty=oneline
[diff]
	algorithm = patience
[merge]
	tool = emerge
[color]
	ui = true
[pager]
	status = true
[diff "gz"]
	textconv = zcat
